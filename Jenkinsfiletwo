pipeline {
   agent any

   environment {
       APP_ENV = 'dev'   // example environment variable
   }

   stages {
       stage('Clone') {
           steps {
               git 'https://github.com/Swethsira/gitjenkinsinstegration.git'
           }
       }

       stage('Build') {
           steps {
               echo 'Building the project...'
               bat 'mvn clean install'   // use 'sh' on Linux
           }
       }

       stage('Test') {
           steps {
               echo 'Running tests...'
               bat 'mvn test'
           }
       }

       stage('Deploy') {
           steps {
               echo "Deploying to ${env.APP_ENV} environment..."
               // your deploy steps go here
           }
       }
   }

   post {
       success {
           echo '✅ Pipeline completed successfully.'
       }
       failure {
           echo '❌ Pipeline failed.'
       }
   }
}
